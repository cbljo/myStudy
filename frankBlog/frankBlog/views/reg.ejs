<form class="form-horizontal" method="post">
    <fieldest>
        <legend>用户注册</legend>
        <div class="control-group">
            <lable class="control-label" for="username">用户名</lable>
            <div class="controls">
                <input type="text" class="input-lg" id="username" name="username">
                <p class="help-block">您的账户名称，用于登录和显示</p>
            </div>
        </div>
        <div class="control-group">
            <lable class="control-label" for="password">密码</lable>
            <div class="controls">
                <input type="text" class="input-lg" id="password" name="password">
            </div>
        </div>
        <div class="control-group">
            <lable class="control-label" for="password-repeat">再次输入密码</lable>
            <div class="controls">
                <input type="text" class="input-lg" id="password-repeat" name="password-repeat">
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">注册</button>
        </div>
    </fieldest>
</form>